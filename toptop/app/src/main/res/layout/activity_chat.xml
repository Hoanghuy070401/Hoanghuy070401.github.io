<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:background="#F4A460"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:title="Nguyen hoang huy" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="727dp"
        android:background="@drawable/background"
        android:layout_above="@+id/sendMessenger"
        android:layout_below="@+id/toobar"
        android:layout_marginTop="0dp"
        android:padding="5dp" />
    <RelativeLayout
        android:id="@+id/sendMessenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#F4A460"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/messengeredit"
            android:layout_width="338dp"
            android:minHeight="50dp"
            android:maxHeight="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edit_input"
            android:layout_toStartOf="@+id/btnsend"
            android:layout_weight="1"
            android:hint="Soạn tin nhắn tại đây ..." />
        <ImageView
            android:id="@+id/btnsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@drawable/send" />
    </RelativeLayout>

</RelativeLayout>