<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/black">


    <com.example.toptop.editorVideo.widget.PortraitFrameLayout
        android:id="@+id/wrap_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </com.example.toptop.editorVideo.widget.PortraitFrameLayout>


    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="147dp"
        android:layout_height="141dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/record"
        android:text="@string/app_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/recording"
        android:layout_width="73dp"
        android:layout_height="65dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_switch_camera"
        app:layout_constraintStart_toStartOf="@+id/btn_switch_camera"
        app:layout_constraintTop_toBottomOf="@+id/btn_switch_camera"
        app:srcCompat="@drawable/recording" />

    <ImageButton
        android:id="@+id/btn_switch_camera"
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/camera"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toBottomOf="@+id/btn_flash"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_flash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/flash"
        app:layout_constraintBottom_toBottomOf="@+id/Sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Sound" />

    <Button
        android:id="@+id/btn_image_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMAGE CAPTURE"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_flash" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Sound"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/sound"
        android:background="#FFFFFF"
        android:textColor="@color/black"
        android:text="Add Music"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btn_record"
        app:layout_constraintStart_toStartOf="@+id/btn_record"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/btn_album"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_record"
        app:srcCompat="@drawable/filter" />

    <ImageView
        android:id="@+id/btn_pause"
        android:layout_width="98dp"
        android:layout_height="89dp"
        android:layout_marginBottom="33dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pause_btn" />

    <ListView
        android:id="@+id/filter_list"
        android:layout_width="104dp"
        android:layout_height="388dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/btnsecond2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:text="30s"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:text="15s"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnsecond2"
        app:layout_constraintEnd_toStartOf="@+id/btnsecond2"
        app:layout_constraintTop_toTopOf="@+id/btnsecond2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nameSound"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/Sound"
        app:layout_constraintStart_toStartOf="@+id/Sound"
        tools:layout_editor_absoluteY="65dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btn_filter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_record"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/face"
        tools:ignore="UseAppTint"
        app:tint="#0A9EE1" />

</androidx.constraintlayout.widget.ConstraintLayout>