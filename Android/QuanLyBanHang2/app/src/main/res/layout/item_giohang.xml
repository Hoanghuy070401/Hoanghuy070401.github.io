<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/new1"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_giohang_tensp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:text="15000"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_baseline_remove_24"
                    android:id="@+id/item_giohang_tru"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <ImageView
                    android:src="@drawable/ic_baseline_add_24"
                    android:id="@+id/item_giohang_cong"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_baseline_drag_handle_24"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/item_gioHang_giaSp2"
                    android:text="250000"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="7"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <CheckBox
                android:id="@+id/item_giohang_checklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>